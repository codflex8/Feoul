{
  "name": "base-app",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --exec ts-node src/app.ts",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert",
    "prod:apply:migrations": "typeorm migration:run -d ./dist/data-source.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^24.2.0",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.5",
    "nodemailer": "^6.9.16",
    "reflect-metadata": "^0.2.2",
    "twitter-lite": "^1.1.0",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/winston": "^2.4.4",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "type": "commonjs"
}
